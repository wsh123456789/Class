<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace即使不用到这个属性也不能为空 -->
<mapper namespace="com.wsh.springboot.warehouse_area.mapper.WarehouseAreaMapper">

	<select id="queryData" resultType="com.wsh.springboot.warehouse_area.model.WarehouseAreaVo">
        select * from subclass
		<where>
			<if test="code != null and code != ''">
				and code = #{code}
			</if>
			<if test="name != null and name != ''">
				and name = #{name}
			</if>
			<if test="status != null">
				and status = #{status}
			</if>
		</where>
        order by s.createTime desc
        limit #{offset},#{pageSize}
    </select>

    <select id="queryCount" resultType="java.lang.Integer"></select>

</mapper>